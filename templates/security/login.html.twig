{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
        <h1>Connexion</h1>
        <form class="form-group" action="{{ path('security_login') }}" method="post">
                <div class="form-group">
                        <input type="email" class="form-control" required name="_username" placeholder="Saisissez votre mail"/>
                </div>
                <div class="form-group">
                        <input type="password" class="form-control" required name="_password" placeholder="Saisissez votre mot de passe"/>
                </div>
                <button type="submit" class="btn btn-primary">Se connecter</button>
        </form>
{% endblock %}
