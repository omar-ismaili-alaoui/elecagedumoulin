{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
        <h1>Inscritption</h1>
        {{  form_start(form) }}
        <div class="form-group">
                {{ form_row(form.email,{'label':'Votre email:','attr':{ 'class':'form-control','placeholder':'Saisissez votre email'}}) }}
        </div>
        <div class="form-group">
                {{ form_row(form.username,{'label':'Votre pseudo:','attr':{ 'class':'form-control','placeholder':'Saisissez votre pseudonime'}}) }}
        </div>
        <div class="form-group">
                {{ form_row(form.password,{'attr':{ 'class':'form-control','placeholder':'Saisissez votre mot de passe'}}) }}
        </div>
        <div class="form-group">
                {{ form_row(form.confirm_password,{'attr':{ 'class':'form-control','placeholder':'Confirmez le votre mot de passe'}}) }}
        </div>
        <button class="btn btn-primary">Inscription</button>
        {{ form_end(form) }}

{% endblock %}
