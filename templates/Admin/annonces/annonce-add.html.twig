{% extends 'base-admin.html.twig' %}

{% block body %}
    <h1 class="page-h<eader">Ajouter une annonce</h1>
    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                {{ form_row(form.titre) }}
            </div>
            <div class="form-group">
                {{ form_row(form.content) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                {{ form_row(form.race) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.isPortee) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.portee) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.active) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.certificat) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="annonce_datePublished">Date de Naissance</label>
                <div class='input-group date' id='datetimepicker2'>
                    {{ form_widget(form.dateNaissance) }}
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar">
                        </span>
                   </span>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="annonce_datePublished">Date de disponibilit√©</label>
                <div class='input-group date' id='datetimepicker3'>
                    {{ form_widget(form.dateDispo) }}
                    <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar">
                    </span>
               </span>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="annonce_datePublished">Date de publication</label>
                <div class='input-group date' id='datetimepicker1'>
                    {{ form_widget(form.datePublished) }}
                    <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar">
                    </span>
               </span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                {{ form_row(form.vermifuge) }}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_row(form.vaccined) }}
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_row(form.loof) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.taouage) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_row(form.nbTatouage) }}
            </div>
        </div>
    </div>

    <div class="clearfix"><br></div>

    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-success">{% if state == 'new' %}Ajouter{% else %}Enregistrer{% endif %}</button>
            <a href="{{ path('admin_annonces') }}" class="btn btn-primary">Retour</a>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
